pipeline{
    agent any

    environment{
        NODE_VERSIONS = '18.x'
    }

    tools{
        nohejs "${NODE_VERSIONS}"
    }

    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage("Install dependencies"){
            steps{
                script{
                    sh 'npm install'
                }
            }
        }

        stage('Start app'){
            steps{
                script{
                    sh 'npm start &'
                    sh 'wait-on http://localhost:8089'
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always{
            echo "CI pipeline"
        }
    }
}